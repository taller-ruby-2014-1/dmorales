<p>
	<h1><%= @post.title %></h1>
</p>

<p>
	<strong>Content:</strong>
	<%= @post.text %>
</p>

<h2>Agrega un comentario:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
	<p>
	    <%= f.label :commenter %><br />
    	<%= f.text_field :commenter %>
  	</p>
  	<p>
	    <%= f.label :body %><br />
	    <%= f.text_area :body %>
  	</p>
  	<p>
	    <%= f.submit %>
  	</p>
<% end %>

<h2>Comentarios</h2>
<%=	 render 'comments' %>

<%= link_to "Back", posts_path %>